{
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es5",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "types": ["node", "es6-shim", "es6-collections", "jasmine"]
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "factories",
    "debug": true
  },
  "files": [
    "src/modules/ng2-dropdown.module.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
